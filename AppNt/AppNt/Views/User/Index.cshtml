@model IEnumerable<AppNt.Models.User>
<head>
    <link rel="stylesheet" href="~/css/botones.css">
</head>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.IdentificationNumber)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th cope="col">
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th cope="col">More information</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentificationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>

                <td>

                    <button class="button-81" role="button"> <a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button>
                    <button class="button-81" role="button"> <a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    <button class="button-81" role="button"> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create"><button class="button-28" role="button">Create new</button></a>
