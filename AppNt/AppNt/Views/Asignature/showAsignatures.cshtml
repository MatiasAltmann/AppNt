@model IEnumerable<AppNt.ViewModels.AsignatureViewModel>

@{
    ViewData["Title"] = "ShowAsignatures";
}

<h1>ShowAsignatures</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a sp-controller="Profesor" asp-action="ShowProfesors" asp-route-id="@item.Id">Ver ranking de profesores</a> |
            </td>
        </tr>
}
    </tbody>
</table>
